@using Model
@model Model.ViewModel.UserViewModel
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddUser</h2>

<div class="row">
    @Html.BeginForm("AddUser", "User", FormMethod.Post)
    <div class="form-group col-md-4">
        Full Name
        @Html.TextBoxFor(o => o.Full_name, new { @class = "form-control" })
    </div>

    <div class="form-group col-md-4">
        Contact No
        @Html.TextBoxFor(o => o.ContactNo, new { @class = "form-control" })
    </div>

    <div class="form-group col-md-4">
        Email
        @Html.TextBoxFor(o => o.Email, new { @class = "form-control" })
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</div>

